{
  "name": "code-architect-tool",
  "publisher": "Piyu-Pika",
  
  
  "displayName": "CodeArchitect Tool",
  "description": "Generate project folder structures for Flutter, Go, Node.js, and FastAPI",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Education",
    "Formatters",
    "Other"
  ],
  "icon": "assets/architecture-icon.png",
  "activationEvents": [
    
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Piyu-Pika/architecture-vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/Piyu-Pika/architecture-vscode-extension/issues"
  },
  "license": "CC BY-NC",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codearchitect.generate",
        "title": "CodeArchitect: Generate Project Structure"
        
      },
      {
        "command": "codearchitect.cleanupBackups",
        "title": "CodeArchitect: Clean Up Backup Files"
        
      },
      {
        "command": "codearchitect.projectRunner",
        "title": "CodeArchitect: Run Project"
      },
      {
        "command": "codearchitect.runProjectWithDevices", 
        "title": "CodeArchitect: Run Project (Select Device)"
      },
      
      {
        "command": "codearchitect.showProjectInfo",
        "title": "CodeArchitect: Show Project Info"
      }
      
    ],
    "keybindings": [
      {
        "command": "codearchitect.generate",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "linux": "ctrl+shift+a",
        "win": "ctrl+shift+a",
        "when": "editorTextFocus"
      },{
        "command": "codearchitect.cleanupBackups",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "linux": "ctrl+shift+b",
        "win": "ctrl+shift+b",
        "when": "editorTextFocus"
      },{
        "command": "codearchitect.projectRunner",
        "key": "ctrl+r",
        "mac": "cmd+r",
        "when": "editorTextFocus"
      },
      {
        "command": "codearchitect.runProjectWithDevices",
        "key": "ctrl+shift+r", 
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      }
    ]
  },
    "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
      "@types/node": "^20.14.10",
      "@types/vscode": "^1.85.0",
      "typescript": "^5.5.3"
    },
    "json.schemaDownload.enable": false
  }